<Alloy>
	<Window class="container" onOpen="doOpen">
		<ActionBar platform="android"/>
		<Menu>
			<MenuItem id="aggiungiItem" title="Salva" onClick="doSalva" 
				showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS"/>
			<MenuItem id="cancellaItem" title="Elimina" onClick="doCancella" 
				showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS"/>
		</Menu>
		<ScrollView width="Ti.UI.FILL" height="Ti.UI.FILL" layout="vertical">
			<TextField id="tf_massima" hintText="Pressione massima" width="Ti.UI.FILL"
				keyboardType="Ti.UI.KEYBOARD_NUMBER_PAD"/>
			<TextField id="tf_minima" hintText="Pressione minima" width="Ti.UI.FILL"
				keyboardType="Ti.UI.KEYBOARD_NUMBER_PAD"/>
			<TextField id="tf_frequenza" hintText="Frequenza cardiaca" width="Ti.UI.FILL"
				keyboardType="Ti.UI.KEYBOARD_NUMBER_PAD"/>
			<Switch id="cb_automisurazione" title="Automisurazione" width="Ti.UI.FILL"
				style="Ti.UI.Android.SWITCH_STYLE_CHECKBOX"/>
			<TextArea id="ta_nota" hintText="Note" width="Ti.UI.FILL"
				height="80dp"/>
			<View layout="horizontal" height="50dp">
				<Label id="lb_rilevazione"/>
				<Button title="Data" onClick="doScegliData"/>
				<Button title="Ora" onClick="doScegliOra"/>
			</View>
		</ScrollView>
	</Window>
</Alloy>
