<Alloy>
	<Window class="container">
		<ListView id="list" width="Ti.UI.FILL" height="Ti.UI.FILL" onItemclick="doItemClick">
			<Templates>
				<ItemTemplate name="pressione">
					<View class="riga" layout="vertical">
						<View layout="horizontal" class="riga" height="Ti.UI.SIZE" width="Ti.UI.FILL">
							<Label text="Pressione:"/>
							<Label bindId="pressione" width="Ti.UI.FILL"/>
						</View>
						<View layout="horizontal" class="riga" height="Ti.UI.SIZE" width="Ti.UI.FILL">
							<Label text="Frequenza:"/>
							<Label bindId="frequenza" width="Ti.UI.FILL"/>
						</View>
						<Label bindId="tipo" height="Ti.UI.SIZE"/>
					</View>
				</ItemTemplate>
			</Templates>

			<ListSection id="section" dataCollection="pressione" dataTransform="doTransform">
				<ListItem template="pressione" pressione:text="{testo_pressione}" frequenza:text="{frequenza}"
				    tipo:text="{tipo}" pressione_id="{pressione_id}"/>
			</ListSection>
		</ListView>
	</Window>
</Alloy>
