<Alloy>
	<Window class="container" title="Farmaci" layout="vertical">
		<ActionBar id="actionbar" platform="android" title="Farmaci"/>
		<Menu>
			<MenuItem id="aggiungiItem" title="Aggiungi" onClick="onAggiungiTerapia" 
				showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS"/>
		</Menu>

		<ListView id="list" width="Ti.UI.FILL" height="Ti.UI.FILL" onItemclick="onItemClick">
			<Templates>
				<ItemTemplate name="terapia">
					<View layout="vertical" class="riga"
						height="Ti.UI.FILL" width="Ti.UI.FILL">
						<Label bindId="nome" id="nome" class="nome"/>
						<Label bindId="oradose" id="ora_dose" class="oradose"/>
					</View>
				</ItemTemplate>
			</Templates>

			<ListSection id="section" dataCollection="terapie" dataTransform="doTransform">
				<ListItem template="terapia" nome:text="{nome}" oradose:text="{dose}"
					terapia_id="{terapia_id}"/>
			</ListSection>
		</ListView>
	</Window>
</Alloy>
