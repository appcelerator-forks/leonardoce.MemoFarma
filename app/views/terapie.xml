<Alloy>
	<Window class="container" title="Terapie">
		<ActionBar id="actionbar" platform="android" title="Terapie"/>
		<Menu>
			<MenuItem id="aggiungiItem" title="Aggiungi" onClick="onAggiungiTerapia" 
				showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS"/>
		</Menu>

		<Label id="nessuna_presente" text="Nessuna terapia presente"/>
		<ListView id="list" width="Ti.UI.FILL" height="Ti.UI.FILL">
			<Templates>
				<ItemTemplate name="terapia" layout="vertical">
					<Label bindId="nome" id="nome"/>
					<Label bindId="oradose" id="ora_dose"/>
				</ItemTemplate>
			</Templates>

			<ListSection id="section" dataCollection="terapie">
				<ListItem template="terapia" nome:text="{nome}" oradose:text="{dose}"/>
			</ListSection>
		</ListView>
	</Window>
</Alloy>
