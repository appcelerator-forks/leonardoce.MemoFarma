<Alloy>
  <Window class="container" title="Farmaci" layout="vertical">

    <ListView id="list" width="Ti.UI.FILL" height="Ti.UI.FILL" onItemclick="onItemClick">
      <Templates>
	<ItemTemplate name="terapia">
	  <View layout="vertical" class="riga"
		height="Ti.UI.FILL" width="Ti.UI.FILL">

	    <View layout="horizontal" height="20dp" width="Ti.UI.FILL">
	      <Label text="Nome Farmaco:" class="titoloCella"/>
	      <Label bindId="nome" height="20dp"/>
	    </View>
	    <View layout="horizontal" height="20dp" width="Ti.UI.FILL">
	      <Label text="Dose:" class="titoloCella"/>
	      <Label bindId="dose" height="20dp"/>
	    </View>
	    <View layout="horizontal" height="20dp" width="Ti.UI.FILL">
	      <Label text="Data Inizio:" class="titoloCella"/>
	      <Label bindId="inizio" height="20dp"/>
	    </View>
	    <View layout="horizontal" height="20dp" width="Ti.UI.FILL">
	      <Label text="Data Fine:" class="titoloCella"/>
	      <Label bindId="fine" height="20dp"/>
	    </View>
	  </View>
	</ItemTemplate>
      </Templates>

      <ListSection id="section" dataCollection="terapie" dataTransform="doTransform">
	<ListItem template="terapia" nome:text="{nome}" dose:text="{dose}"
		  terapia_id="{terapia_id}" inizio:text="{inizio}" fine:text="{fine}"/>
      </ListSection>
    </ListView>
  </Window>
</Alloy>
